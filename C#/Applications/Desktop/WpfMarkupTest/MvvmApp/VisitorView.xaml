<UserControl x:Class="MvvmApp.VisitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MvvmApp"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Margin="10" FontSize="16" Text="Welcome Visitor"/>
        <DockPanel Margin="5">
            <TextBlock DockPanel.Dock="Left" Margin="5" Text="Name:"/>
            <Button DockPanel.Dock="Right" Margin="5" Content="Register"/>
            <TextBox Margin="5"/>
        </DockPanel>
        <DataGrid Margin="10" HorizontalAlignment="Center" IsReadOnly="True"/>
    </StackPanel>
</UserControl>
